<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rotation="0"
    tools:context=".article_view">


    <ImageButton
        android:id="@+id/soundbutton"

        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="45dp"
        android:background="@color/white"
        android:src="@drawable/ic_baseline_volume_up_24" />

    <ImageButton
        android:id="@+id/heartbutton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="357dp"
        android:layout_marginTop="110dp"
        android:background="@color/white"
        android:src="@drawable/ic_baseline_favorite_border_24" />


    <TextView
        android:id="@+id/title02"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="67dp"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/green_c1"
        android:textSize="@dimen/word_30"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:fillViewport="true"
        android:tint="#52503A">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/article01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/word_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keyword:"
                android:textColor="@color/green_a1"
                android:textSize="@dimen/word_24" />

            <TextView
                android:id="@+id/keyword01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_a1"
                android:textSize="@dimen/word_24" />

            <TextView
                android:id="@+id/keyword02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_a1"
                android:textSize="@dimen/word_24" />

            <TextView
                android:id="@+id/keyword03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_a1"
                android:textSize="@dimen/word_24" />

            <TextView
                android:id="@+id/keyword04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_a1"
                android:textSize="@dimen/word_24" />

            <TextView
                android:id="@+id/keyword05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_a1"
                android:textSize="@dimen/word_24" />

            <TextView
                android:id="@+id/keyword06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_a1"
                android:textSize="@dimen/word_24" />


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@color/primary_green"
        >

        <ImageButton
            android:id="@+id/playbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_favorite_border_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginBottom="70dp"
            android:layout_weight="1"
            android:text="" />
        <TextView
            android:id="@+id/textView_other1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:text="" />
        <TextView
            android:id="@+id/textView_hard1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"

            android:background="@color/primary_green"
            android:textColor="@color/white"
            android:text="Easy" />

        <Button
            android:id="@+id/button_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"

            android:background="@color/primary_green"
            android:textColor="@color/white"
            android:text="Other" />

        <Button
            android:id="@+id/button_hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"

            android:background="@color/primary_green"
            android:textColor="@color/white"
            android:text="Hard"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:text="" />
        <TextView
            android:id="@+id/textView_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:text="0" />
        <TextView
            android:id="@+id/textView_hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:text="0" />

    </LinearLayout>






</RelativeLayout>

