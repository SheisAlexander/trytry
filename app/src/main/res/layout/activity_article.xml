<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rotation="0"
    tools:context=".article">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/title02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/green_c1"
            android:textSize="@dimen/word_30"
            android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">
    <ImageButton
        android:id="@+id/soundbutton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:src="@drawable/ic_baseline_volume_up_24"
        />

    <ImageButton
        android:id="@+id/heartbutton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:src="@drawable/ic_baseline_favorite_border_24"
        android:layout_gravity="right"/>
            </LinearLayout>
        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="542dp"
        android:layout_marginTop="170dp"
        android:fillViewport="true"
        android:tint="#52503A">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/article01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:textColor="@color/black"
                android:textSize="@dimen/word_24"
                android:textIsSelectable="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Keyword:"
                android:textColor="@color/green_a1"
                android:textSize="@dimen/word_24" />

            <TextView
                android:id="@+id/keyword01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_a1"
                android:textSize="@dimen/word_24" />

            <TextView
                android:id="@+id/keyword02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_a1"
                android:textSize="@dimen/word_24" />

            <TextView
                android:id="@+id/keyword03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_a1"
                android:textSize="@dimen/word_24" />

            <TextView
                android:id="@+id/keyword04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_a1"
                android:textSize="@dimen/word_24" />

            <TextView
                android:id="@+id/keyword05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_a1"
                android:textSize="@dimen/word_24" />

            <TextView
                android:id="@+id/keyword06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_a1"
                android:textSize="@dimen/word_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="選擇下一篇文章程度:"
                android:textSize="@dimen/word_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_easy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/primary_green"
                    android:text="Easier"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/button_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/primary_green"
                    android:text="Same"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/button_hard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/primary_green"
                    android:text="Harder"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/english_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:textSize="@dimen/word_24" />


        </LinearLayout>


    </ScrollView>

</RelativeLayout>

