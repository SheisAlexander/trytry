<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.English" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_a1</item>
        <item name="colorPrimaryVariant">@color/green_a1</item>
        <item name="colorOnPrimary">@color/green_a2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_a3</item>
        <item name="colorSecondaryVariant">@color/green_a4</item>
        <item name="colorOnSecondary">@color/green_b1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="btn_mid" parent="@android:style/Widget.Button">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_mid</item>
    </style>


    <style name="Theme.English.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.English.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.English.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

</resources>