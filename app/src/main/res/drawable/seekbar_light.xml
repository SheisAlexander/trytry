<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip" />
            <gradient
                android:startColor="@color/km"
                android:centerColor="@color/km"
                android:centerY="0.75"
                android:endColor="@color/km"
                android:angle="270"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dip" />
                <gradient
                    android:startColor="@color/klg"
                    android:centerColor="@color/klg"
                    android:centerY="0.3"
                    android:endColor="@color/klg"
                    android:angle="270"/>
            </shape>
        </clip>
    </item>
</layer-list>